<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/allbackground"
    tools:context=".SignUp">

    <EditText
        android:id="@+id/txtKayitMail"
        android:layout_width="286dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="222dp"
        android:background="@drawable/edittexttasarimi"
        android:ems="10"
        android:hint="Email Adresiniz"

        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/txtKaydolKullaniciAdi"
        android:layout_width="284dp"
        android:layout_height="58dp"
        android:layout_below="@+id/txtKayitMail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/edittexttasarimi"
        android:ems="10"
        android:hint="Kullanıcı Adınız"
        android:inputType="text"
        android:textColor="@color/black"

        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/txtKaydolParola"
        android:layout_width="289dp"
        android:layout_height="57dp"
        android:layout_below="@+id/txtKaydolKullaniciAdi"
        android:layout_alignParentStart="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittexttasarimi"
        android:ems="10"
        android:hint="Parolanız"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/btnKaydol"
        android:layout_width="202dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtKaydolParola"
        android:layout_alignParentStart="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="54dp"
        android:background="@color/purple_200"
        android:text="KAYDOL" />

    <Button
        android:id="@+id/btnGirisYapaGit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnKaydol"
        android:layout_alignParentStart="true"
        android:layout_marginStart="162dp"
        android:layout_marginTop="35dp"
        android:text="girisyap" />
</RelativeLayout>